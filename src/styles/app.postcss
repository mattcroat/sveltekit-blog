a {
	color: inherit;
	text-decoration: none;
}

img {
	min-width: 100%;
}

[role='button'],
input:not([type='checkbox']),
button,
select,
textarea {
	border-radius: var(--round-1);
}

h1,
h2,
h3,
h4,
h5,
h6 {
	--font-weight: 600;
	margin: 0;
	padding: 0;
}

