::-webkit-scrollbar {
	width: 8px;
}

::-webkit-scrollbar-track {
	border-radius: var(--round-1);
	background: var(--clr-scrollbar-track);
}

::-webkit-scrollbar-thumb {
	border-radius: var(--round-1);
	background: var(--clr-scrollbar-thumb);
}

:root {
	/* --font-sans: 'Poppins', sans-serif;
	--font-mono: 'JetBrains Mono', mono; */

	--font-family: 'Poppins', sans-serif;

	--clr-brand: hsl(0 91% 71%);
	--clr-bg: hsl(0 0% 9%);
	--clr-text-1: hsl(0 0% 98%);
	--clr-scrollbar-track: hsl(0 0% 20%);
	--clr-scrollbar-thumb: hsl(0 0% 40%);

	--space-1: 0.5rem; /* 8px */
	--space-2: 1rem; /* 16px */
	--space-3: 1.5rem; /* 24px */
	--space-4: 2rem; /* 32px */
	--space-5: 2.5rem; /* 40px */
	--space-6: 3rem; /* 48px */
	--space-7: 4rem; /* 64px */

	--fs-1: 1rem; /* 16px */
	--fs-2: 1.125rem; /* 18px */
	--fs-3: 1.5rem; /* 24px */
	--fs-4: 2rem; /* 32px */
	--fs-5: 2.5rem; /* 40px */
	--fs-6: 3rem; /* 48px */

	--round-1: 1rem; /* 16px */

	/* box shadows? */
}

